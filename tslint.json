{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "linterOptions": {
        "exclude": [
            "POC",
            "support",
            "src/*.spec.ts"
        ]
    },
    "jsRules": {},
    "rules": {
        "indent": [true, "spaces", 4],
        "trailing-comma": [
            false
        ],
        "max-line-length": [
            false
        ],
        "no-trailing-whitespace": false,
        "semicolon": [true, "always", "ignore-bound-class-methods"],
        "eofline": false
    },
    "rulesDirectory": []
}
